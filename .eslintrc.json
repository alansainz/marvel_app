{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {},
  "overrides": [
    {
      "files": ["*.js", "*.spec.js"],
      "rules": {
        "react/jsx-filename-extension": "off",
        "arrow-body-style": "off",
        "implicit-arrow-linebreak": "off"
      }
    }
  ]
}
